<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container_main_fragment"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/editbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingStart="@dimen/mainlinear_padding"
        android:paddingEnd="@dimen/mainlinear_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/editbtn"
            android:layout_width="@dimen/editbtn_width"
            android:layout_height="@dimen/editbtn_height"
            android:layout_gravity="center"
            android:padding="0dp"
            android:text="@string/editbtn" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mainfragment_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editbar" />

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingStart="@dimen/mainlinear_padding"
        android:paddingEnd="@dimen/mainlinear_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/button"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/newbtn_width"
            android:layout_gravity="center"
            android:padding="0dp"
            android:text="@string/addlistbtn"
            app:layout_constraintBottom_toBottomOf="parent"  />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>